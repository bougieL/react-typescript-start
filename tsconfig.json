{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es7",
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true
  },
  "include": [
    "src"
  ]
}
